citHeader("To cite ijtiff in publications use:")

citEntry(entry = "Article",
         key = "ijtiff",
         doi = "10.21105/joss.00633",
         url = "https://doi.org/10.21105/joss.00633",
         year = "2018",
         month = "mar",
         publisher = "The Open Journal",
         volume = "3",
         number = "23",
         pages = "633",
         author = c(person(given = "Rory",
                           family = "Nolan"),
                    person(given = "Sergi",
                           family = "Padilla-Parra")),
         title = "ijtiff: An R package providing {TIFF} I/O for {ImageJ} users",
         journal = "Journal of Open Source Software",

         textVersion = paste("Nolan R and Padilla-Parra S (2018).",
                              "ijtiff: An R package providing TIFF I/O ",
                              "for ImageJ users.",
                              "Journal of Open Source Software, ",
                              "3(23), pp. 633.",
                              "doi: 10.21105/joss.00633.",
                              "<URL: https://doi.org/10.21105/joss.00633>.")
         )